{
  "projects": [
    {
      "name": "Frontend",
      "path": "./Frontend/package.json",
      "framework": "node",
      "port": 3000,
      "roles": [
        "app"
      ],
      "labels": [
        "frontend"
      ],
      "commands": {
        "start": "run dev"
      }
    },
    {
      "name": "Backend",
      "path": "./Backend/Backend.csproj",
      "framework": "dotnet",
      "port": 5000,
      "roles": [
        "app"
      ],
      "labels": [
        "backend"
      ],
      "arguments": {
        "start": [
          "--foo bar"
        ]
      }
    },
    {
      "name": "SampleSuccessfulTests",
      "path": "./SampleSuccessfulTests",
      "framework": "dotnet",
      "roles": [
        "test"
      ],
      "labels": [
        "backend"
      ]
    },
    {
      "name": "NodeApp",
      "path": "./NodeApp",
      "framework": "node",
      "roles": [
        "test"
      ],
      "labels": [
        "backend"
      ]
    },
    // {
    //   "name": "IntegrationTests",
    //   "path": "./IntegrationTests",
    //   "framework": "node",
    //   "type": "test",
    //   "requires": [ "Frontend", "Backend" ],
    //   "rawOutput": true,
    //   "serial": true,
    //   "environment": {
    //     "HEADLESS": true
    //   }
    // },
    {
      "name": "IntegrationTests",
      "path": "./IntegrationTests",
      "framework": "node",
      "roles": [
        "test"
      ],
      "requires": [
        "Frontend",
        "Backend"
      ],
      "optional": true,
      "rawOutput": true,
      "serial": true,
      "environment": {
        "HEADLESS": true
      },
      "labels": [
        "e2e"
      ]
    }
  ],
  "services": [
    {
      "name": "backend_db",
      "type": "docker",
      "image": "mcr.microsoft.com/mssql/server",
      "environment": {
        "ACCEPT_EULA": 1
      },
      "ports": [
        "1420:1433"
      ],
      "volumes": [
        "dbdata:/var/opt/mssql"
      ]
    }
  ]
}