    {
      "name": "Frontend",
      "path": "./Frontend/package.json",
      "framework": "node",
      "port": 3000,
      "commands": {
        "start": "run dev"
      }
    },
    {
      "name": "Backend",
      "path": "./Backend/Backend.csproj",
